- member = @membership.member
- group = @membership.group
- community = @membership.community
%section
  .row
    .small-12.columns
      %h2= t(:title, scope: [:memberships])
      
      = render partial: 'shared/spacer'
      .row
        .small-10.small-centered.columns.end
          %h3= t(:member, scope: [:activerecord, :model])
          = render partial: 'members/show', locals: {resource: member}

      = render partial: 'show', locals: {community: community, membership: @membership}
