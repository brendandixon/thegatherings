%section
  .row
    .small-12.columns
      %h2= t(:title, scope: [:communities, :report], name: @group.name)

      = render partial: 'shared/spacer'
      .row
        .small-12.columns
          #attendance_chart.chart{data: {chart: :attendance}}

      = render partial: 'shared/spacer'
      .row
        .small-4.columns
          .actions.left
            = link_to t(:title, scope:[:gatherings, :new]), new_community_gathering_path(@community), class: 'button small'
        .small-6.columns.end
          .float-right
            = link_to t(:title, scope: [:gatherings]), community_path(@community)

= render template: 'shared/bind_charts'
:javascript
  theGatherings.Charts.attendance_data = #{@attendance.to_json}
