- url = controller.send("#{@resource_type}_tags_path".to_sym)
%section
  .row
    .small-12.columns
      %h2= t("#{@mode}_title", scope: [:tags])
      = form_for(@resource, as: @resource_type, url: url, method: :patch) do |f|
        - (@tags || Taggable::TAGS).each do |tags|
          - member = "#{tags}_list".to_sym
          - options = Taggable.options_for(tags)
          = render partial: 'shared/spacer'
          .row
            .small-10.small-centered.columns
              %h4= t("#{@mode}_html", scope:[:tags, tags.pluralize])
              = render partial: 'shared/collection', locals: {form: f, resource_member: member, resource_list: @resource.send(member), collection: options}

        = render partial: 'shared/spacer'
        .row
          .small-2.columns.end
            .actions
              = f.submit t(:next, scope: [:common]), class: 'button small', style: 'width:100%;'

      = render partial: 'shared/errors', locals: {resource: @resource}
